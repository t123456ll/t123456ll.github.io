.site-meta {
  background:url(https://imgur.com/F8k9vID.jpg);
}


// upper sidebar
.header-inner {
  background:url(https://imgur.com/f8MMo3Y.jpg);
  border-radius: 10px;
}

  // content size in sidebar
.menu .menu-item a {
  font-size: 14px;
  color: #f5f5f5;
}

